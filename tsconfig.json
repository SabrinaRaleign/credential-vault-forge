{
  "compilerOptions": {
    "declaration": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"],
  "include": ["tasks/**/*", "test/**/*", "deploy/**/*", "types/**/*"]
}


